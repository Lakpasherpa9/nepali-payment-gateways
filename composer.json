{
    "name": "lakpasherpa/nepali-payment-gateways",
    "description": "Laravel package for Nepalese payment gateways (eSewa, Khalti, FonePay)",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lakpa sherpa",
            "email": "lakpasherpa3611@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "lakpasherpa\\NepaliPaymentGateways\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "lakpasherpa\\NepaliPaymentGateways\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "lakpasherpa\\NepaliPaymentGateways\\NepaliPaymentServiceProvider"
            ]
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}